{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "filesGlob": [
        "./*.ts",
        "./test/*.ts",
        "./typings/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "compileOnSave": false,
    "files": [
        "./decorators.d.ts",
        "./index.d.ts",
        "./test/test.ts",
        "./typings/promise.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
